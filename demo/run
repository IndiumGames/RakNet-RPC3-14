#/bin/bash

# When this exits, exit all back ground process also.
trap 'kill $(jobs -p)' EXIT

# Create empty log files for server and client.
truncate -s 0 demo/bin/server.log
truncate -s 0 demo/bin/client.log


./demo/bin/raknet-demo -s > demo/bin/server.log &

sleep 2s

./demo/bin/raknet-demo -c > demo/bin/client.log &
    
tail -f demo/bin/server.log -f demo/bin/client.log
